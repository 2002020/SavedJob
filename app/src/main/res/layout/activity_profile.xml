<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F6E6"
    tools:context=".profile">

    <View
        android:id="@+id/rectangle_7"
        android:layout_width="410dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#FFFBFB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_7"
        app:layout_goneMarginTop="35dp"
        app:srcCompat="@drawable/profilepic" />

    <EditText
        android:id="@+id/textView"
        android:layout_width="142dp"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:background="@color/transparent"
        android:fontFamily="@font/jua_akaya"
        android:hint="Add Username"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/imageView15"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="@+id/imageView15"
        app:layout_constraintTop_toBottomOf="@+id/imageView15"
        app:layout_goneMarginTop="20dp" />

    <View
        android:id="@+id/rectangle8"
        android:layout_width="411dp"
        android:layout_height="450dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/round_edittext"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#30A4D0DA"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/home_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/home"
            android:drawablePadding="1dp"
            android:text="Home"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <Button
            android:id="@+id/search_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/searchbtn"
            android:drawablePadding="5dp"
            android:text="Search"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <Button
            android:id="@+id/saved_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/saved"
            android:drawablePadding="5dp"
            android:text="Saved"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <Button
            android:id="@+id/chat_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/chat"
            android:drawablePadding="5dp"
            android:text="Chat"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <Button
            android:id="@+id/profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/profile"
            android:drawablePadding="5dp"
            android:text="Profile"
            android:textColor="@color/black"
            android:background="#FEE0BF"
            android:textSize="11sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="408dp"
        android:layout_marginTop="256dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/galdeano_reg"
                android:text="About"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/AboutEdit"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="15dp"
                android:background="@color/transparent"
                android:fontFamily="@font/galdeano_reg"
                android:gravity="right|center_vertical"
                android:hint="Add Description"
                android:textSize="20sp" />



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#736666" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/galdeano_reg"
                android:text="Birthday"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/birth_dateEdit"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/galdeano_reg"
                android:gravity="right|center_vertical"
                android:hint="dd/MM/yy"
                android:background="@color/transparent"
                android:textSize="20sp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                 />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#736666" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/galdeano_reg"
                android:text="Location"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/locationEdit"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/galdeano_reg"
                android:gravity="right|center_vertical"
                android:hint="Eg: Georgetown"
                android:background="@color/transparent"
                android:textSize="20sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#736666" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/galdeano_reg"
                android:text="Main Specialisation"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/Spec_Edit"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="15dp"
                android:background="@color/transparent"
                android:fontFamily="@font/galdeano_reg"
                android:gravity="right|center_vertical"
                android:hint="Eg: Marketing"
                android:textSize="20sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#736666" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/galdeano_reg"
                android:text="Job Experience"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/job_YearEdit"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/galdeano_reg"
                android:hint="Eg: 5 Year"
                android:background="@color/transparent"
                android:gravity="right|center_vertical"
                android:textSize="20sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#736666" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/galdeano_reg"
                android:text="Contact Num"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/PhoneEdit"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/galdeano_reg"
                android:hint="010123456"
                android:background="@android:color/transparent"
                android:gravity="right|center_vertical"
                android:textSize="20sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#736666" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/galdeano_reg"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/EmailEdit"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/galdeano_reg"
                android:hint="newemail@example.com"
                android:textColor="#B7ACAC"
                android:inputType="textEmailAddress"
                android:gravity="right|center_vertical"
                android:background="@android:color/transparent"
                android:textSize="20sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#736666" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/galdeano_reg"
                android:text="Logout"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/logout"
                android:layout_width="325dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                app:srcCompat="@drawable/logout_icon" />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#736666" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ig_icon"
        android:layout_width="30dp"
        android:layout_height="31dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:srcCompat="@drawable/igcolor" />

    <ImageView
        android:id="@+id/fb_icon"
        android:layout_width="33dp"
        android:layout_height="31dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="188dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView15"
        app:srcCompat="@drawable/fbcolor" />

    <ImageView
        android:id="@+id/twitter_icon"
        android:layout_width="49dp"
        android:layout_height="32dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.704"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView15"
        app:srcCompat="@drawable/twittercolor" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="25dp"
        android:layout_height="21dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_7"
        app:layout_constraintHorizontal_bias="0.038"
        app:layout_constraintStart_toStartOf="@+id/rectangle_7"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrowback" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_7"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toEndOf="@+id/imageView19"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/setting" />
</androidx.constraintlayout.widget.ConstraintLayout>