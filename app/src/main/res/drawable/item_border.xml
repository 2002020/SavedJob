<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Background color inside the border (change this color) -->
            <solid android:background="@drawable/background" /> <!-- Change #FF0000 to your desired background color -->
            <corners android:radius="4dp" /> <!-- Rounded corners, adjust as needed -->
            <stroke
                android:width="1dp"
                android:color="#00BCD4" /> <!-- Border color -->
        </shape>
    </item>
</layer-list>



